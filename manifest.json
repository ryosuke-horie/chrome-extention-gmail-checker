{
  "manifest_version": 3,
  "name": "Gmail Checker",
  "version": "1.0",
  "description": "Gmail送信前の確認ポップアップ拡張機能",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://www.mail.google.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://www.mail.google.com/*"
      ],
      "js": ["main.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
} 